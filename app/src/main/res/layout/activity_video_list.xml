<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg_page"
    android:layout_height="match_parent">

    <com.hjq.bar.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorPrimary"
        app:lineVisible="false"
        app:leftTitleColor="@color/common_white"
        app:titleColor="@color/common_white"
        app:rightIcon="@mipmap/ic_multi_choice"
        app:rightIconWidth="18dp"
        app:rightIconHeight="18dp"
        app:leftIconTint="@color/common_light_gray_color"
        app:rightIconTint="@color/common_light_gray_color"/>

    <com.lihang.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        app:hl_cornerRadius="@dimen/common_corners"
        app:hl_layoutBackground="@color/colorPrimary"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            tools:listitem="@layout/item_video"/>
    </com.lihang.ShadowLayout>


</LinearLayout>
